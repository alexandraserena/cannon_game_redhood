#:kivy 2.1.0
<StoryScreen>:
    name: 'story'

    FloatLayout:
        Image:
            source: 'resources/images/story_back.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos: 0, 0

        Image:
            source: 'resources/images/vignetta1.png'
            size_hint: 0.4, 0.4
            pos_hint: {"x": 0.05, "top": 0.95}

        Image:
            source: 'resources/images/vignetta2.png'
            size_hint: 0.45, 0.45
            pos_hint: {"right": 0.97, "center_y": 0.5}

        Image:
            source: 'resources/images/vignetta3.png'
            size_hint: 0.4, 0.4
            pos_hint: {"x": 0.05, "y": 0.05}

        Image:
            source: 'resources/images/squirrel.PNG'
            size_hint: 0.3, 0.3
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            background_normal: 'resources/images/next.jpeg'
            background_down: 'resources/images/next.jpeg'
            size_hint: .1, .1
            pos_hint: {'right': 0.98, 'y': 0.02}
            on_release:
                app.root.current = 'start'

        Button:
            background_normal: 'resources/images/back.jpg'
            background_down: 'resources/images/back.jpg'
            size_hint: .1, .1
            pos_hint: {'x': 0.02, 'y': 0.02}
            on_release:
                app.root.current = 'home'