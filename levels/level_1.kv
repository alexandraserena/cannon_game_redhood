#:kivy 2.1.0

<Level1Screen>:
    BoxLayout:
        orientation: 'horizontal'

        FloatLayout:
            size_hint_x: 0.7

            Image:
                source: 'resources/images/level1_back.jpg'
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1
                pos: 0, 0

            Image:
                id: crow
                source: 'resources/images/crow.png'
                size_hint: None, None
                size: 300, 300
                pos: root.width * 0.7, root.height * 0.6  

            RockGroup:
                size_hint: None, None
                size: 200, 200
                pos: root.width * 0.30, root.height * 0.15
            RockGroup:
                size_hint: None, None
                size: 200, 200
                pos: root.width * 0.30, root.height * 0.45
            RockGroup:
                size_hint: None, None
                size: 200, 200
                pos: root.width * 0.42, root.height * 0.30
            RockGroup:
                size_hint: None, None
                size: 200, 200
                pos: root.width * 0.54, root.height * 0.45
            RockGroup:
                size_hint: None, None
                size: 200, 200
                pos: root.width * 0.66, root.height * 0.60

            PerpetioGroup:
                size_hint: None, None
                size: 150, 300
                pos: root.width * 0.38, root.height * 0.62
            PerpetioGroup:
                size_hint: None, None
                size: 150, 300
                pos: root.width * 0.55, root.height * 0.16
            PerpetioGroup:
                size_hint: None, None
                size: 150, 300
                pos: root.width * 0.72, root.height * 0.3

            ProjectileSettingsBar:
                size_hint: None, None
                size: 250, 120
                pos_hint: {"x": 0, "top": 1}

            Button:
                size_hint: None, None
                size: 75, 75
                pos_hint: {"top": 0.97, "right": 0.97}
                background_normal: "resources/images/help.jpeg"
                background_down: "resources/images/help.jpeg"
                on_release: app.root.get_screen("game").on_help()

            TimerWidget:
                id: timer_widget
                size_hint: None, None
                size: 150, 50
                pos_hint: {"right": 0.98, "y": 0.02}
